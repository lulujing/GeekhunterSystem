
@{
    ViewBag.Title = "Index";   
}

<div class="col-md-12">
    <h2>
        Geek Registration System
    </h2>
    <div class="col-md-12" style="padding:10px"></div>
        <label for="id_select">Select Skill: &nbsp;</label>
        <select id="id_select" class="selectpicker bla bla bli" multiple data-live-search="true" style="width:60px" >
          
            @foreach (var v in ViewBag.skills)
            {
                <option value="@v.Id" >@v.Name</option>
            }
            </optgroup>
        </select>
        <button id="btn-add-Candidate" class="btn btn-primary pull-right">Add</button>
        <hr>
    </div>
<!--dropdownlistbutton-->
<div class="row" id="list">
    @Html.Action("List")
</div>
<div id="AddnewCandidate">
    <div class="modal fade" id="login-form" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="loginModalLabel">Add New Candidate</h4>
                </div>
                <div class="modal-body" id="login-form-body" style="align-items:center">
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
        $(window).on('load', function () {

            $('.selectpicker').selectpicker({
                'selectedText': 'cat'
            });

        });
</script>
